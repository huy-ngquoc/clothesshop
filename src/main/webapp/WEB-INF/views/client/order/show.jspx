<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:form="http://www.springframework.org/tags/form" xmlns:c="http://java.sun.com/jsp/jstl/core" version="2.0">
    

    <jsp:directive.page contentType="application/xhtml+xml" />
    <jsp:output doctype-root-element="html" doctype-public="" doctype-system="" />
    <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Order Information | Aurora Apparel</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="/client/css/order.css" rel="stylesheet"/>
        
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top" aria-label="Main navigation">
            <div class="container">
                <a class="navbar-brand fw-bold" href="#" title="Aurora Apparel">Aurora Apparel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain"
                    aria-controls="navMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="index.html">Home</a></li>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Shop</a></li>
                    </ul>
                    <c:if test="${not empty user}">
                        <div class="dropdown me-3">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                                id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="${user.avatarFileName != null ? '/img/avatars/' + user.avatarFileName : '/img/default-avatar.png'}"
                                    alt="User Avatar" width="40" height="40" class="rounded-circle" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li class="px-3 py-2">
                                    <span class="fw-semibold d-block">${user.fullName}</span>
                                    <small class="text-muted">${user.email}</small>
                                </li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li><a class="dropdown-item text-danger" href="/auth/logout">Log out</a></li>
                            </ul>
                        </div>
                    </c:if>
                    <a class="btn btn-outline-dark" href="#cart" role="button" aria-label="View cart">Cart (0)</a>
                </div>
            </div>
        </nav>

        <div class="container main-content">
            <h1 class="display-6 fw-bold mb-1">Checkout</h1>
            <p class="text-secondary mb-4">Please enter your shipping details to complete the order.</p>
            
            <div class="row g-4">
                
                <div class="col-lg-8">
                    <div class="card p-4 shadow-sm">
                        <h2 class="h4 mb-4">1. Shipping Information</h2>
                        
                        <form:form action="confirm/cart" modelAttribute="request_info">
                            
                           

                            <div class="mb-3">
                                <label for="address" class="form-label">Shipping Address <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Street, Ward, District, City" required="required" path="address" />
                            </div>

                            <div class="mb-3">
                                <label for="phoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="phoneNumber" path="phoneNumber" name="phoneNumber" required="required" pattern="[0-9]{10,11}" title="Phone number must be 10 or 11 digits."/>
                            </div>
                            
                            
                            
                            <hr class="my-4" />
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark btn-lg">Place Order and Pay</button>
                            </div>
                        </form:form>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="filter-card p-3">
                        <h2 class="h5 fw-bold mb-3">2. Order Summary</h2>
                        
                        <div class="mb-3">
                            <c:if test="${not empty cartItems}">
                                <c:forEach var="item" items="${cartItems}">
                                    <div class="d-flex align-items-center mb-3 pb-2 border-bottom">
                                        <img src="/img/productvariant/${item.productVariant.image}" alt="${item.productVariant.name}" class="cart-item-image me-3" />
                                        
                                        <div class="flex-grow-1">
                                            <span class="d-block fw-semibold small">${item.productVariant.name}</span>
                                            <span class="d-block text-muted small">Qty: ${item.productVariant.stockQuantity} x ${item.productVariant.priceCents} VND</span>
                                        </div>
                                        
                                        <span class="fw-semibold small">
                                            ${item.productVariant.stockQuantity * item.productVariant.priceCents} VND
                                        </span>
                                    </div>
                                    <c:set var="subtotal" value="${subtotal + (item.productVariant.stockQuantity * item.productVariant.priceCents)}" />
                                </c:forEach>
                            </c:if>
                        </div>
                        
                        <ul class="list-unstyled small mb-3 pt-2 border-top">
                            <li>Subtotal: <span class="float-end fw-semibold">${subtotal} VND</span></li>
                            
                            <c:set var="shippingFee" value="10000" />
                            <li>Shipping Fee: <span class="float-end">${shippingFee} VND</span></li>
                        </ul>
                        
                        <c:set var="finalTotal" value="${subtotal + shippingFee}" />
                        <div class="d-flex justify-content-between fw-bold text-dark h5 pt-2 border-top">
                            <span>TOTAL:</span>
                            <span>${finalTotal} VND</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <footer class="py-5 border-top">
            <div class="container">
                <div class="row g-4">
                    <div class="col-12 col-md-6">
                        <h3 class="h6">Aurora Apparel</h3>
                        <p class="text-secondary mb-0">Modern pieces that move with you.</p>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <p class="small text-secondary mb-0">Â© <span id="year">2025</span> Aurora Apparel. All rights
                            reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>

</jsp:root>