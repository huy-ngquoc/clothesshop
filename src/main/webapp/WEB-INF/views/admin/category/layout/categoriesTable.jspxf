<?xml version="1.0" encoding="UTF-8"?>

<jsp:root version="2.0" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core">

    <jsp:directive.page contentType="application/xhtml+xml" />
    <jsp:output doctype-root-element="html" doctype-public="" doctype-system="" />

    <div class="mt-sm-5 mt-1">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="d-sm-flex justify-content-between">
                    <h2>Categories table</h2>
                    <a class="btn btn-primary" href="/admin/category/create">Create a new category</a>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12 mx-auto">
                <table class="table table-responsive table-bordered table-hover">
                    <thead class="text-center align-middle">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <c:forEach var="responseDto" items="${responseDtoList}">
                            <tr>
                                <td>${responseDto.id}</td>
                                <td>${responseDto.name}</td>
                                <td>${responseDto.desc}</td>
                                <td class="d-flex justify-content-center align-items-center gap-2">
                                    <a class="btn btn-success" href="/admin/category/${responseDto.id}">View</a>
                                    <a class="btn btn-warning"
                                        href="/admin/category/update/info/${responseDto.id}">Update</a>
                                    <a class="btn btn-danger" href="/admin/category/delete/${responseDto.id}">Delete</a>
                                </td>
                            </tr>
                        </c:forEach>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</jsp:root>